<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".PracticeFragment">

    <TextView
        android:id="@+id/question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textColor="?attr/colorSecondary"
        android:shadowColor="#00000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Tafel van 2" />

    <TextView
        android:id="@+id/question_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_text"
        tools:text="2 × 9 = " />

    <TextView
        android:id="@+id/answer_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:shadowColor="#00000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        app:layout_constraintStart_toEndOf="@+id/question_display"
        app:layout_constraintTop_toTopOf="@+id/question_display"
        app:layout_constraintBottom_toBottomOf="@+id/question_display"
        tools:text="18" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/stop_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:text="Stop Oefenen"
        android:textSize="18sp"
        android:textColor="?attr/colorOnSurface"
        android:textAllCaps="false"
        app:backgroundTint="?attr/colorSurfaceVariant"
        app:cornerRadius="8dp"
        app:strokeColor="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer_display" />

    <!-- Fixed height container for feedback message to prevent layout jumping -->
    <FrameLayout
        android:id="@+id/feedback_container"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stop_button">

        <TextView
            android:id="@+id/feedback_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimary"
            android:background="@drawable/feedback_background"
            android:padding="12dp"
            android:visibility="gone"
            android:gravity="center"
            tools:text="Fout, probeer opnieuw" />

    </FrameLayout>

    <GridLayout
        android:id="@+id/keypad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:columnCount="3"
        android:rowCount="4"
        android:orientation="horizontal"
        android:verticalSpacing="0dp"
        android:horizontalSpacing="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feedback_container">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/keypad_7"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="7"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:textSize="20sp"
            app:backgroundTint="?attr/colorSurfaceVariant"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/keypad_8"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="8"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:textSize="20sp"
            app:backgroundTint="?attr/colorSurfaceVariant"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/keypad_9"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="9"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:textSize="20sp"
            app:backgroundTint="?attr/colorSurfaceVariant"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/keypad_4"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="4"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:textSize="20sp"
            app:backgroundTint="?attr/colorSurfaceVariant"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/keypad_5"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="5"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:textSize="20sp"
            app:backgroundTint="?attr/colorSurfaceVariant"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/keypad_6"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="6"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:textSize="20sp"
            app:backgroundTint="?attr/colorSurfaceVariant"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/keypad_1"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="1"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:textSize="20sp"
            app:backgroundTint="?attr/colorSurfaceVariant"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/keypad_2"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="2"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:textSize="20sp"
            app:backgroundTint="?attr/colorSurfaceVariant"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/keypad_3"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="3"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:textSize="20sp"
            app:backgroundTint="?attr/colorSurfaceVariant"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/keypad_decimal"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text=","
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:textSize="20sp"
            app:backgroundTint="?attr/colorSurfaceVariant"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/keypad_0"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="0"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:textSize="20sp"
            app:backgroundTint="?attr/colorSurfaceVariant"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/keypad_backspace"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="⌫"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            app:backgroundTint="@color/error"
            app:cornerRadius="8dp" />

    </GridLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/submit_button"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:text="Controleer"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        app:backgroundTint="@color/success"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/keypad" />

    <TextView
        android:id="@+id/progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/submit_button"
        tools:text="Vraag 1 van 10" />

</androidx.constraintlayout.widget.ConstraintLayout>