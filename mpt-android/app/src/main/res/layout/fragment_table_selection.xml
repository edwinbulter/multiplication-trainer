<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:context=".TableSelectionFragment">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tafels Oefenen"
            android:textColor="@color/primary"
            android:textSize="28sp"
            android:textStyle="bold"
            android:shadowColor="#00000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/welcome_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/table_selection_welcome_top_margin"
            android:textColor="?attr/colorSecondary"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_text"
            tools:text="Welkom Edwin!" />

        <TextView
            android:id="@+id/subtitle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/table_selection_subtitle_top_margin"
            android:text="Welk tafeltje wil je oefenen?"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcome_message" />

        <Button
            android:id="@+id/view_scoreboard_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/table_selection_scoreboard_top_margin"
            android:backgroundTint="?attr/colorSecondary"
            android:text="Bekijk Scorebord"
            android:textSize="17sp"
            app:cornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subtitle_text" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/operation_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/table_selection_operation_top_margin"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_scoreboard_button">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/operation_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Operatie"
                    android:textSize="15sp"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="6dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/multiply_button"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/operation_button_background"
                        android:text="Vermenigvuldigen"
                        android:textSize="12sp"
                        android:textColor="@color/operation_button_text"
                        android:textAllCaps="false" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/divide_button"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/operation_button_background"
                        android:text="Delen"
                        android:textSize="12sp"
                        android:textColor="@color/operation_button_text"
                        android:textAllCaps="false" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/table_selection_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/table_selection_title_top_margin"
            android:text="Kies een tafel"
            android:textSize="15sp"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/operation_card" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tables_recycler_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/table_selection_recycler_top_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/table_selection_title" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/custom_table_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/table_selection_custom_top_margin"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tables_recycler_view">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp">

                <TextView
                    android:id="@+id/custom_table_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Of kies je eigen getal"
                    android:textSize="15sp"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/custom_table_input"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/table_selection_input_top_margin"
                    android:layout_marginEnd="8dp"
                    android:hint="Bijv. 11 of 1,5"
                    android:inputType="text"
                    android:digits="0123456789,"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="?attr/colorOnSurfaceVariant"
                    android:background="@drawable/rounded_edittext_background"
                    android:padding="12dp"
                    app:layout_constraintEnd_toStartOf="@+id/start_custom_table_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/custom_table_title" />

                <Button
                    android:id="@+id/start_custom_table_button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:backgroundTint="?attr/colorSecondary"
                    android:text="Start"
                    android:textSize="12sp"
                    app:cornerRadius="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/custom_table_input"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/custom_table_input" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/logout_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/table_selection_logout_top_margin"
            android:backgroundTint="?attr/colorError"
            android:text="Uitloggen"
            android:textSize="17sp"
            app:cornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/custom_table_card" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>