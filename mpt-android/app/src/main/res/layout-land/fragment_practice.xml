<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".PracticeFragment">

    <!-- Left side: Question and answer area -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/left_panel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/vertical_divider">

        <TextView
            android:id="@+id/question_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/practice_title_top_margin"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="?attr/colorSecondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Tafel van 2" />

        <TextView
            android:id="@+id/question_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/practice_question_top_margin"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/question_text"
            tools:text="2 × 9 = " />

        <TextView
            android:id="@+id/answer_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            app:layout_constraintStart_toEndOf="@+id/question_display"
            app:layout_constraintTop_toTopOf="@+id/question_display"
            app:layout_constraintBottom_toBottomOf="@+id/question_display"
            tools:text="18" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/stop_button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/practice_stop_button_top_margin"
            android:text="Stop Oefenen"
            android:textSize="16sp"
            android:textColor="@color/practice_stop_button_text"
            android:textAllCaps="false"
            app:backgroundTint="@color/practice_stop_button_background"
            app:cornerRadius="8dp"
            app:strokeColor="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/question_display" />

        <!-- Fixed height container for feedback message -->
        <FrameLayout
            android:id="@+id/feedback_container"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stop_button">

            <TextView
                android:id="@+id/feedback_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnPrimary"
                android:background="@drawable/feedback_background"
                android:padding="12dp"
                android:visibility="gone"
                android:gravity="center"
                tools:text="Fout, probeer opnieuw" />

        </FrameLayout>

        <TextView
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Vraag 1 van 10" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Vertical divider -->
    <View
        android:id="@+id/vertical_divider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="?attr/colorOutline"
        app:layout_constraintStart_toEndOf="@+id/left_panel"
        app:layout_constraintEnd_toStartOf="@+id/right_panel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Right side: Virtual keypad and submit button -->
    <LinearLayout
        android:id="@+id/right_panel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vertical_divider">

        <GridLayout
            android:id="@+id/keypad"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:columnCount="3"
            android:rowCount="4">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/keypad_7"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="7"
                android:textColor="@color/practice_keypad_text"
                android:textStyle="bold"
                android:textSize="20sp"
                app:backgroundTint="@color/practice_keypad_background"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/keypad_8"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="8"
                android:textColor="@color/practice_keypad_text"
                android:textStyle="bold"
                android:textSize="20sp"
                app:backgroundTint="@color/practice_keypad_background"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/keypad_9"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="9"
                android:textColor="@color/practice_keypad_text"
                android:textStyle="bold"
                android:textSize="20sp"
                app:backgroundTint="@color/practice_keypad_background"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/keypad_4"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="4"
                android:textColor="@color/practice_keypad_text"
                android:textStyle="bold"
                android:textSize="20sp"
                app:backgroundTint="@color/practice_keypad_background"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/keypad_5"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="5"
                android:textColor="@color/practice_keypad_text"
                android:textStyle="bold"
                android:textSize="20sp"
                app:backgroundTint="@color/practice_keypad_background"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/keypad_6"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="6"
                android:textColor="@color/practice_keypad_text"
                android:textStyle="bold"
                android:textSize="20sp"
                app:backgroundTint="@color/practice_keypad_background"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/keypad_1"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="1"
                android:textColor="@color/practice_keypad_text"
                android:textStyle="bold"
                android:textSize="20sp"
                app:backgroundTint="@color/practice_keypad_background"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/keypad_2"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="2"
                android:textColor="@color/practice_keypad_text"
                android:textStyle="bold"
                android:textSize="20sp"
                app:backgroundTint="@color/practice_keypad_background"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/keypad_3"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="3"
                android:textColor="@color/practice_keypad_text"
                android:textStyle="bold"
                android:textSize="20sp"
                app:backgroundTint="@color/practice_keypad_background"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/keypad_decimal"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text=","
                android:textColor="@color/practice_keypad_text"
                android:textStyle="bold"
                android:textSize="20sp"
                app:backgroundTint="@color/practice_keypad_background"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/keypad_0"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="0"
                android:textColor="@color/practice_keypad_text"
                android:textStyle="bold"
                android:textSize="20sp"
                app:backgroundTint="@color/practice_keypad_background"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/keypad_backspace"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="⌫"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                app:backgroundTint="@color/error"
                app:cornerRadius="8dp" />

        </GridLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/submit_button"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:text="Controleer"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            app:backgroundTint="@color/success"
            app:cornerRadius="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
